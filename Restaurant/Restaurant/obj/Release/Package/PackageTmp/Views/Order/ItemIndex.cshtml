@model IEnumerable<Restaurant.Models.Item>

@{
    ViewBag.Title = "ItemIndex";
    if (Session["AdminUserID"] == null)
    { Response.Redirect("~/User/AdminLogin"); }
}

<h2>Menu Index</h2>

<p>
    @Html.ActionLink("Add New Menu", "AddItem")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ItemId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <th>
        @Html.DisplayFor(modelItem => item.ItemId)
    </th>
    <td>
        @Html.DisplayFor(modelItem => item.ItemName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ItemPrice)
    </td>
    <td>
        @Html.ActionLink("Delete", "DeleteItem", new { id = item.ItemId })

    </td>
</tr>
}

</table>
